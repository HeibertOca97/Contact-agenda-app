html
   head
      meta(charset="UTF-8")
      meta(http-equiv="X-UA-Compatible", content="IE=7")
      meta(http-equiv="X-UA-Compatible", content="ie=edge")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      title #{title}
      link(rel="stylesheet", href="./css/app.css")
   body
      h1 #{title} 
      div.container
         main.form
            div
               input(type="hidden" name="id")
               input(type="text" name="name" placeholder="Name contact" autocomplete="off")
               input(type="number" name="number" placeholder="Number contact" autocomplete="off")

            button(type="submit" id="btn_add" class="bg-btn") #{action} contact
         ul.list
            each item in contacts
               li 
                  div
                     p #{item.name_contact}
                     p 
                        small NÂ° #{item.number_contact}
                  div
                     button(class="btn_delete" data-id=item.id) delete

      script(src="./js/functions.js")